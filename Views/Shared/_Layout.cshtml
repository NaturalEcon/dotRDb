<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Transferics RDb</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Scripts.Render("~/bundles/lib")
        @Scripts.Render("~/bundles/app")
        @Scripts.Render("~/bundles/ui-bootstrap")
        @Scripts.Render("~/bower_components/lodash/dist/lodash.min.js")
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/resource.css")
        @Styles.Render("~/bower_components/bootstrap/dist/css/bootstrap.css")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="/">transferics &alpha;0.1</a></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li><a href="#/resource/list">Resources</a></li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body" ng-app="xferx">
            <section class="content-wrapper main-content clear-fix">
                <div id="body" ng-app="xferx">
                    @RenderBody()
                    <div ng-view></div>
                </div>
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>No &copy; necessary</p>
                </div>
            </div>
        </footer>
        @RenderSection("scripts", required: false)
    </body>
</html>
